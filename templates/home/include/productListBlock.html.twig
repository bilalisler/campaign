<div class="col-xl-12 content-box ">
    <div class="row row-featured">
        <div class="col-xl-12  box-title ">
            <div class="inner">
                <h2>
                    <span>Sponsored Products</span>
                    <a href="category.html" class="sell-your-item">
                        View more
                        <i class="  icon-th-list"></i>
                    </a>
                </h2>
            </div>
        </div>
        <div style="clear: both"></div>
        <div class=" relative  content featured-list-row  w100">
            <nav class="slider-nav has-white-bg nav-narrow-svg">
                <a class="prev">
                    <span class="nav-icon-wrap"></span>
                </a>
                <a class="next">
                    <span class="nav-icon-wrap"></span>
                </a>
            </nav>

            <div class="no-margin featured-list-slider ">
                {% for product in products %}

                    {% set imagePath = asset('assets/images/none_product_image.png') %}
                    {% for image in product.productImages if image.isAvatar and image.status == 1 %}
                        {% set imagePath = product_image_path ~ '/' ~ image.image %}
                    {% endfor %}

                    <div class="item">
                        <a href="{{ path("product_detail",{'categorySlug':product.category.categorySlug,'slug':product.slug}) }}">
                            <span class="item-carousel-thumb">
                                <img class="img-responsive" src="{{ asset(imagePath) }}" alt="img">
                            </span>
                            <span class="item-name"> {{ product.name }}  </span>
                            <span class="price">  {{ product.buyPrice }} TL </span>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>


    </div>
</div>